%nav.navbar.navbar-default.navbar-fixed-top{ role:"navigation" }
  .container
    .row
      .navbar-header
        %button.navbar-toggle.collapsed{ type:"button", data: {toggle:"collapse", target:"#mainNavigation"} }
          %span.sr-only Toggle navigation
          %span.fa.fa-bars
        = link_to '/index.html', :class => "navbar-brand unruly-logo #{data.header.logo.classname}" do
          = image_tag data.header.logo.icon, :class => 'unruly-logo-icon'
          %span.unruly-logo-text{ style:"line-height: inherit" }= data.header.logo.text

      .navbar-collapse.collapse#mainNavigation
        %ul.nav.navbar-nav
          - data.header.links.each do |link|
            %li{ class: [("active" if (current_page.data.title and current_page.data.title.include? link.name) or (current_page.data.active_nav == link.name))]}
              = link_to link.url do
                - if link.icon?
                  %span.fa.fa-fw{class: "fa-#{link.icon}"}
                %span= link.name
        %ul.nav.navbar-nav.navbar-right.hidden-sm
          %li
            %a.unruly-logo{ href:"http://unruly.co", title:"Unruly" }
              %img.unruly-logo-icon{ src:"//video.cdn-unrulymedia-5.com/ux-guidelines/latest/images/unruly-logo.svg", alt:"Unruly", style:"height: 4.5rem" }
.header-spacer
